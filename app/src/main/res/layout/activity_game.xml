<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <AbsoluteLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/boardImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/board" />

            <ImageView
                android:id="@+id/aPullImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/a100marker" />

            <ImageView
                android:id="@+id/bPullImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/b100marker" />

            <ImageView
                android:id="@+id/cPullImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/c100marker" />

            <ImageView
                android:id="@+id/dPullImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/d100marker" />
        </AbsoluteLayout>

        <!--        https://www.iconfinder.com/search/icons?family=feather-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/new_game_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/new_game_icon" />

            <ImageButton
                android:id="@+id/buy_sell_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/buy_sell_icon" />

            <ImageButton
                android:id="@+id/end_turn_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/end_turn_icon" />

            <ImageButton
                android:id="@+id/player_report_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/player_report_icon" />

            <ImageButton
                android:id="@+id/play_card_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/play_card_icon" />

            <ImageButton
                android:id="@+id/played_cards_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/played_cards_icon" />

            <ImageButton
                android:id="@+id/end_report_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/end_report_icon" />

            <ImageButton
                android:id="@+id/help_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/help_icon" />

            <ImageButton
                android:id="@+id/about_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/about_icon" />

            <ImageButton
                android:id="@+id/exit_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/exit_icon" />
        </LinearLayout>

    </LinearLayout>

</AbsoluteLayout>